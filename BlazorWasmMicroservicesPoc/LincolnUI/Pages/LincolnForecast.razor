@page "/lincoln/forecast"
@inject LincolnApiClient LincolnApi

<WeatherDisplay Location="@this._forecastResponse.Location" WeatherType="@this._forecastResponse.WeatherType.ToString()" />

@code {
    private LincolnForecastResponse _forecastResponse = new LincolnForecastResponse();

    protected override async Task OnInitializedAsync()
    {
        _forecastResponse = await LincolnApi.GetWeatherAsync();
    }
}
